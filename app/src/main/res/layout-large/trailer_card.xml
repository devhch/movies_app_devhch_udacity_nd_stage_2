<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="@dimen/trailer_card_width"
        android:layout_height="@dimen/trailer_card_height"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:orientation="vertical"
        android:padding="@dimen/layout_margin_top">

        <androidx.cardview.widget.CardView
            android:id="@+id/trailer_card_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/text_color"
            app:cardCornerRadius="@dimen/card_movies_radius"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="@dimen/trailer_card_image_width"
                    android:layout_height="@dimen/trailer_card_image_height"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:src="@drawable/youtube" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/red_rose"
                    android:gravity="center"
                    android:padding="@dimen/layout_padding"
                    android:text="title"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/text_size" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>